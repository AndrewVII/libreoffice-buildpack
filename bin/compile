#!/bin/bash

BUILD_DIR=$1
CACHE_DIR=$2

echo "-----> Installing LibreOffice"

# Download LibreOffice precompiled binary
wget -qO- https://download.documentfoundation.org/libreoffice/stable/7.5.0/deb/x86_64/LibreOffice_7.5.0_Linux_x86-64_deb.tar.gz | tar xz -C /tmp

# Copy the LibreOffice files to the build directory
cp -r /tmp/LibreOffice*/DEBS/* $BUILD_DIR/

echo "-----> LibreOffice installation complete"